<resources>

    <!-- Base application theme. -->
    <style name="Theme.CookEasy.App" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/Theme.CookEasy.App.PreferenceTheme</item>
    </style>

    <style name="Theme.CookEasy.App.MainActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="preferenceTheme">@style/Theme.CookEasy.App.PreferenceTheme</item>
    </style>

    <style name="Theme.CookEasy.App.PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/Theme.CookEasy.App.PreferenceFragmentCompatStyle</item>
    </style>

    <style name="Theme.CookEasy.App.PreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/layout_preferences</item>
    </style>

    <style name="Theme.CookEasy.App.PreferenceTheme.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

</resources>
